{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div id="users" class="entity">
            <div id="user-entities" class="entity-list">

            </div>

            <div id="user-form" class="entity-form">

            </div>
        </div>

        <div id="contentpages" class="entity">
            <div id="contentpage-entities" class="entity-list">

            </div>

            <div id="contentpage-form" class="entity-form">

            </div>
        </div>

        <div id="controls">
            <div id="batch-queue"></div>
            <button id="batch-mode">Enable Batch Mode</button>
        <div>
    </div>
{% endblock %}

{% block stylesheets %}
<style>
    html, body {width:100%; height:100%; margin:0; padding:0;}
    body { background: #F5F5F5; font: 18px/1.5 sans-serif; }
    .container {
        width:100%;
        height:100%;
    }

    .entity {
        width:50%;
        height:80%;
        float:left;
    }

    .entity-form {
        width:100%;
        height:50%;
        overflow:auto;
    }

    .entity-list {
        width:100%;
        height:50%;
        overflow:auto;
        background-color:white;
    }

    #controls {
        width:100%;
        height:20%;
        float:left;
    }

    #batch-mode {
        width:40%;
        height:100%;
        float:left;
    }

    #batch-queue {
        width:30%;
        height:100%;
        background:white;
        float:left;
    }

    .modal {
        top:15%;
        left:30%;
        width:40%;
        height:40%;
        background:white;
        position:absolute;
        box-shadow:0px 0px 3px #333;
    }

    .close-modal {
        width:15px;
        height:15px;
        line-height:15px;
        text-align:center;
        cursor:pointer;
        float:right;
    }
</style>
{% endblock %}

{%block javascripts %}
    {{parent()}}

    <script src="{{ asset('js/main.js') }}"></script>
{% endblock %}
